<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Properties>
        <Property name="location">./logs</Property>
        <Property name="name">access</Property>
    </Properties>

    <Appenders>
        <RollingFile name="fileLogger" fileName="${location}/${name}.log"
                     filePattern="${location}/archived/${name}-%d{yyyy-MM-dd}.%i.log" immediateFlush="false">
            <PatternLayout>
                <pattern>%X{TRACE_ID} %X{SPAN_ID} %X{CLIENT_IP} %d{ISO8601_OFFSET_DATE_TIME_HHCMM} [%thread] %level %c{1.} %msg%n
                </pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%X{TRACE_ID} %X{SPAN_ID} %X{CLIENT_IP} %d{ISO8601_OFFSET_DATE_TIME_HHCMM} [%thread] %level %c{1.} %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.mt.common" level="info" additivity="false">
            <appender-ref ref="console"/>
            <appender-ref ref="fileLogger"/>
        </Logger>
        <Logger name="com.mt.common.infrastructure.RabbitMqEventStreamService" level="debug" additivity="false">
            <appender-ref ref="console"/>
            <appender-ref ref="fileLogger"/>
        </Logger>
        <Logger name="com.mt.access" level="debug" additivity="false">
            <appender-ref ref="console"/>
            <appender-ref ref="fileLogger"/>
        </Logger>
        <Logger name="org.springframework.security" level="info" additivity="false">
            <appender-ref ref="console"/>
            <appender-ref ref="fileLogger"/>
        </Logger>
        <Logger name="org.springframework.web" level="info" additivity="false">
            <appender-ref ref="console"/>
            <appender-ref ref="fileLogger"/>
        </Logger>
        <Logger name="com.netflix.eureka.registry" level="warn" additivity="false">
            <appender-ref ref="console"/>
            <appender-ref ref="fileLogger"/>
        </Logger>
        <!--        start of hibernate-->
<!--        <Logger name="org.hibernate.SQL" level="debug" additivity="false">-->
<!--            <appender-ref ref="console"/>-->
<!--            <appender-ref ref="fileLogger"/>-->
<!--        </Logger>-->
<!--        <Logger name="org.hibernate.stat" level="debug" additivity="false">-->
<!--            <appender-ref ref="console"/>-->
<!--            <appender-ref ref="fileLogger"/>-->
<!--        </Logger>-->
<!--        <Logger name="org.hibernate.SQL_SLOW" level="info" additivity="false">-->
<!--            <appender-ref ref="console"/>-->
<!--            <appender-ref ref="fileLogger"/>-->
<!--        </Logger>-->
<!--        <Logger name="org.hibernate.cache" level="debug" additivity="false">-->
<!--            <appender-ref ref="console"/>-->
<!--            <appender-ref ref="fileLogger"/>-->
<!--        </Logger>-->
        <!--        end of hibernate-->
        <Root level="info" additivity="false" includeLocation="false">
            <appender-ref ref="console"/>
            <appender-ref ref="fileLogger"/>
        </Root>
    </Loggers>
</Configuration>